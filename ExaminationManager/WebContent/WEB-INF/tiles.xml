<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC
		"-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
		"http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>
	<!-- Main layout -->
	<definition name="mainLayout" template="/layout/mainLayout.jsp">
		<put-attribute name="title" value="txtTitle"/>
		<put-attribute name="applicationName" value="txtApplicationName"></put-attribute>
	</definition>
	
	<!-- Modal Layout -->
	<definition name="modalLayout" template="/layout/modalLayout.jsp">
		<put-attribute name="title" value="txtTitle"/>
		<put-attribute name="applicationName" value="txtApplicationName"></put-attribute>
	</definition>
	
	<!-- Screens -->
	<definition name="home" extends="mainLayout">
		<put-attribute name="content" value="/tiles/home.jsp"/>
		<put-attribute name="actionDisplayName" value="txtADNIDoNotExistPleasReplaceMe"/>
	</definition>
	<definition name="inputSingle" extends="mainLayout">
		<put-attribute name="content" value="/tiles/inputSingle.jsp"/>
		<put-attribute name="actionDisplayName" value="txtADNIDoNotExistPleasReplaceMe"/>
	</definition>
	
	<definition name="inputSingleExamAttendance" extends="mainLayout">
		<put-attribute name="content" value="/tiles/inputSingleExamAttendance.jsp"/>
		<put-attribute name="actionDisplayName" value="txtADNInputSingleExamAttendance"/>
	</definition>
	<definition name="fileSingleOralExamAttendance" extends="mainLayout">
		<put-attribute name="content" value="/tiles/fileSingleOralExamAttendance.jsp"/>
		<put-attribute name="actionDisplayName" value="txtADNFileSingleOralExamAttendance"/>
	</definition>
	<definition name="showListForOralExamAttendance" extends="mainLayout">
		<put-attribute name="content" value="/tiles/showListForOralExamAttendance.jsp"/>
		<put-attribute name="actionDisplayName" value="txtADNShowListForOralExamAttendance"/>
	</definition>
	
	<definition name="trainmanIntro" extends="modalLayout">
		<put-attribute name="content" value="/tiles/trainman/dataImporter.jsp"/>
		<put-attribute name="actionDisplayName" value="txtADNEmptyDatabase"/>
	</definition>
	
	<definition name="trainmanResult" extends="modalLayout">
		<put-attribute name="content" value="/tiles/trainman/result.jsp"/>
		<put-attribute name="actionDisplayName" value="txtADNEmptyDatabase"/>
	</definition>

</tiles-definitions>